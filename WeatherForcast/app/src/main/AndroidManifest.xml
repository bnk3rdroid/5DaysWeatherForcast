<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bnk3r.droid.weatherforecast">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="bnk3r.droid.weatherforecast.application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="bnk3r.droid.weatherforecast.features.splashScreen.ui.SplashScreenView"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="weatherforecast.bnk3r.droid"
                    android:path="/splash"
                    android:scheme="http" />
            </intent-filter>
        </activity>

    </application>

</manifest>